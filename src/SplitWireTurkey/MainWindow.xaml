<Window x:Class="SplitWireTurkey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SplitWire-Turkey" 
        Height="700" Width="500"
        MinHeight="700" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="16,8,16,8" Padding="8">
            <StackPanel>
                <Image Source="Resources/splitwire-logo-128.png" 
                       Width="48" 
                       Height="48" 
                       HorizontalAlignment="Center"
                       Margin="0,8,0,5"/>
                <Image Source="Resources/splitwireturkeytext.png" 
                       Width="180" 
                       Height="Auto" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,8"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Main Content -->
        <TabControl x:Name="TabControl" Grid.Row="1" Margin="16,0,16,16" Style="{StaticResource MaterialDesignTabControl}" SelectionChanged="TabControl_SelectionChanged">
            
            <!-- Main Tab -->
            <TabItem Header="Ana Sayfa">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0">
                                            <Button x:Name="btnStart" 
                            Content="Standart Kurulum" 
                            Style="{StaticResource MainButtonStyle}"
                            Click="BtnStart_Click"/>
                        
                        <Button x:Name="btnAlternativeSetup" 
                                Content="Alternatif Kurulum" 
                                Style="{StaticResource MainButtonStyle}"
                                Click="BtnAlternativeSetup_Click"/>
                        
                        <Button x:Name="btnByeDPISetup" 
                                Content="ByeDPI ST Kurulum" 
                                Style="{StaticResource MainButtonStyle}"
                                Click="BtnByeDPISetup_Click"/>
                        
                        <Button x:Name="btnExit" 
                                Content="Çıkış" 
                                Style="{StaticResource MainButtonStyle}"
                                Click="BtnExit_Click"/>
                        
                        <TextBlock x:Name="txtWiresockStatus" 
                                   Text="WireSock durumu kontrol ediliyor..." 
                                   HorizontalAlignment="Center" 
                                   Margin="0,20,0,0"/>
                    </StackPanel>
                    
                    <Button x:Name="btnInfo" 
                            Content="ℹ" 
                            Style="{StaticResource InfoButtonStyle}"
                            Click="BtnInfo_Click"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Grid.Row="2"
                            Margin="0,20,0,10"/>
                </Grid>
            </TabItem>
            
            <!-- Advanced Tab -->
            <TabItem Header="Gelişmiş">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Folder Management -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Klasör Yönetimi" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                   Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="btnAddFolder" 
                                    Content="Klasör Ekle" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Click="BtnAddFolder_Click"/>
                            
                            <Button x:Name="btnClearFolders" 
                                    Content="Listeyi Temizle" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Click="BtnClearFolders_Click"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Folder List -->
                    <Border Grid.Row="1" 
                            BorderBrush="{DynamicResource MaterialDesignDivider}" 
                            BorderThickness="1" 
                            Margin="0,0"
                            Height="150">
                        <ListBox x:Name="lstFolders" 
                                 Margin="0,10"
                                 Padding="5"
                                 MaxHeight="230"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Focusable="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True">
                        </ListBox>
                    </Border>
                    
                    <!-- Advanced Buttons -->
                    <StackPanel Grid.Row="2" Margin="0,20,0,0">
                        <Button x:Name="btnCustomSetup" 
                                Content="Özelleştirilmiş Kurulum" 
                                Style="{StaticResource MainButtonStyle}"
                                Click="BtnCustomSetup_Click"/>
                        
                        <Button x:Name="btnGenerateConfig" 
                                Content="Özelleştirilmiş Profil Dosyası Oluştur" 
                                Style="{StaticResource MainButtonStyle}"
                                Click="BtnGenerateConfig_Click"/>
                        
                        <Button x:Name="btnRemoveAllServices" 
                                Content="Hizmetleri Kaldır" 
                                Style="{StaticResource MainButtonStyle}"
                                Click="BtnRemoveAllServices_Click"/>
                        
                        <Button x:Name="btnHeartInfo" 
                                Content="♥" 
                                Style="{StaticResource InfoButtonStyle}"
                                Click="BtnHeartInfo_Click"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Loading Overlay -->
        <Grid x:Name="loadingOverlay" 
              Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="Collapsed">
            <materialDesign:Card HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" 
                                 Padding="20">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" 
                                 Width="100" 
                                 Height="100" 
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"/>
                    <TextBlock Text="İşlem devam ediyor..." 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window> 