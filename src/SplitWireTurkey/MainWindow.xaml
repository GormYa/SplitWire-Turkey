<Window x:Class="SplitWireTurkey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SplitWire-Turkey" 
        Height="640" Width="500"
        MinHeight="640" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Theme Toggle Switch Style -->
        <Style x:Key="ThemeToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#f5fdff"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                Width="60" Height="32">
                            
                            <Grid>
                                <!-- Light Mode Icon -->
                                <Image x:Name="LightIcon" 
                                       Source="Resources/lightmode.png"
                                       Width="27" Height="27"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="4,0,0,0"
                                       Opacity="1">
                                    <Image.RenderTransform>
                                        <TranslateTransform x:Name="LightTransform" X="0"/>
                                    </Image.RenderTransform>
                                </Image>
                                
                                <!-- Dark Mode Icon -->
                                <Image x:Name="DarkIcon" 
                                       Source="Resources/darkmode.png"
                                       Width="20" Height="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="6,0,0,0"
                                       Opacity="0">
                                    <Image.RenderTransform>
                                        <TranslateTransform x:Name="DarkTransform" X="0"/>
                                    </Image.RenderTransform>
                                </Image>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Background Color Animation -->
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#020017" Duration="0:0:0.4">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            
                                            <!-- Light Icon Fade Out and Move -->
                                            <DoubleAnimation Storyboard.TargetName="LightIcon" 
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="LightTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="27" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            
                                            <!-- Dark Icon Fade In and Move -->
                                            <DoubleAnimation Storyboard.TargetName="DarkIcon" 
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.2" BeginTime="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="DarkTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="25" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Background Color Animation -->
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#f5fdff" Duration="0:0:0.4">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            
                                            <!-- Dark Icon Fade Out and Move -->
                                            <DoubleAnimation Storyboard.TargetName="DarkIcon" 
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="DarkTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            
                                            <!-- Light Icon Fade In and Move -->
                                            <DoubleAnimation Storyboard.TargetName="LightIcon" 
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.2" BeginTime="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="LightTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Gray" 
                                                        Direction="270" 
                                                        ShadowDepth="3" 
                                                        Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Animated Toggle Switch Style -->
        <Style x:Key="ModernToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Width="38" Height="20">
                            
                            <Ellipse x:Name="Switch" 
                                     Fill="White" 
                                     Width="16" Height="16"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="0,0,0,1">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="SwitchTransform" X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#027ac4" Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="19" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#E0E0E0" Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Gray" 
                                                        Direction="270" 
                                                        ShadowDepth="2" 
                                                        Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Animated Toggle Switch Style - Dark Mode -->
        <Style x:Key="ModernToggleSwitchStyleDark" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3f3f40"/>
            <Setter Property="BorderBrush" Value="#8e8e91"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Width="38" Height="20">
                            
                            <Ellipse x:Name="Switch" 
                                     Fill="#8e8e91" 
                                     Width="16" Height="16"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="0,0,0,1">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="SwitchTransform" X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#f5f5f5" Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="19" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#3f3f40" Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform" 
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Gray" 
                                                        Direction="270" 
                                                        ShadowDepth="2" 
                                                        Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Hizmet Kaldır Buton Stili -->
        <Style x:Key="ServiceRemoveButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="BorderBrush" Value="#FF0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b83737"/>
                    <Setter Property="BorderBrush" Value="#FF0000"/>
                    <Setter Property="Foreground" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
                <Style x:Key="AdvancedRemoveButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="BorderBrush" Value="#FF0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b83737"/>
                    <Setter Property="BorderBrush" Value="#FF0000"/>
                    <Setter Property="Foreground" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border x:Name="headerCard" 
                Grid.Row="0" 
                Margin="16,8,16,8" 
                Padding="8"
                Background="White"
                CornerRadius="4"
                Effect="{StaticResource MaterialDesignShadowDepth1}">
            <StackPanel>
                <Image x:Name="imgLogo"
                       Source="Resources/splitwire-logo-128.png" 
                       Width="96" 
                       Height="96" 
                       HorizontalAlignment="Center"
                       Margin="0,-8,0,0"/>
                <Image x:Name="imgText"
                       Source="Resources/splitwireturkeytext.png" 
                       Width="180" 
                       Height="Auto" 
                       HorizontalAlignment="Center"
                       Margin="0,2,0,2"/>
                
                <!-- Hakkında Butonu -->
                <Button x:Name="btnInfo" 
                        Content="ℹ" 
                        Style="{StaticResource InfoButtonStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Click="BtnInfo_Click"/>
                

            </StackPanel>
        </Border>
        
        <!-- Theme Toggle Switch - Absolute Positioned Overlay -->
        <ToggleButton x:Name="btnThemeToggle" 
                     Grid.Row="0"
                     Style="{StaticResource ThemeToggleSwitchStyle}"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="0,16,24,0"
                     Panel.ZIndex="999"
                     Click="BtnThemeToggle_Click"/>

        <!-- Main Content -->
        <TabControl x:Name="TabControl" Grid.Row="1" Margin="0,0,0,16" Style="{StaticResource MaterialDesignTabControl}" SelectionChanged="TabControl_SelectionChanged" HorizontalAlignment="Stretch">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="4,3"/>
                    <Setter Property="Margin" Value="0,0"/>
                    <Setter Property="MinWidth" Value="0"/>
                    <Setter Property="MaxWidth" Value="Infinity"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                </Style>
                <Style TargetType="TabPanel">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                </Style>
            </TabControl.Resources>
            
            <!-- Main Tab -->
            <TabItem Header="Ana Sayfa" FontFamily="{StaticResource PoppinsBold}">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <Button x:Name="btnStart" 
                            Content="Standart Kurulum" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="300"
                            Height="50"
                            FontSize="16"
                            FontFamily="{StaticResource PoppinsBold}"
                            Background="Transparent"
                            Margin="0,0,0,10"
                            Click="BtnStart_Click"/>
                        
                        <Button x:Name="btnAlternativeSetup" 
                                Content="Alternatif Kurulum" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Width="300"
                                Height="50"
                                FontSize="16"
                                FontFamily="{StaticResource PoppinsBold}"
                                Background="Transparent"
                                Margin="0,0,0,10"
                                Click="BtnAlternativeSetup_Click"/>
                        
                        <!-- Tarayıcılar için Tünelleme Toggle Switch -->
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,10">
                            <ToggleButton x:Name="chkBrowserTunneling" 
                                         Style="{StaticResource ModernToggleSwitchStyle}"
                                         IsChecked="False"/>
                            <TextBlock Text="Tarayıcılar için de tünelleme yap" 
                                       FontFamily="{StaticResource Montserrat}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Gelişmiş Ayarlar Toggle Switch -->
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,10">
                            <ToggleButton x:Name="chkAdvancedSettings" 
                                         Style="{StaticResource ModernToggleSwitchStyle}"
                                         Checked="ChkAdvancedSettings_Checked"
                                         Unchecked="ChkAdvancedSettings_Unchecked"/>
                            <TextBlock Text="Klasör listesini özelleştir" 
                                       FontFamily="{StaticResource Montserrat}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Gelişmiş Ayarlar Elementleri (Varsayılan olarak gizli) -->
                        <StackPanel x:Name="advancedSettingsPanel" 
                                   Orientation="Vertical" 
                                   Visibility="Collapsed">
                    
                    <!-- Folder Management -->
                        <TextBlock Text="Klasör Yönetimi" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                   Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="btnAddFolder" 
                                    Content="Klasör Ekle" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    FontFamily="{StaticResource PoppinsRegular}"
                                    Click="BtnAddFolder_Click"/>
                            
                            <Button x:Name="btnClearFolders" 
                                    Content="Listeyi Temizle" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    FontFamily="{StaticResource PoppinsRegular}"
                                    Click="BtnClearFolders_Click"
                                    Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Folder List -->
                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                            BorderThickness="1" 
                                    Margin="0,0,0,20"
                            Height="100">
                        <ListBox x:Name="lstFolders" 
                                 Margin="0,10"
                                 Padding="5"
                                 MaxHeight="120"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Focusable="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True">
                        </ListBox>
                    </Border>
                    
                    <!-- Advanced Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Center">
                        <Button x:Name="btnCustomSetup" 
                                Content="Özel Kurulum" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Width="200"
                                        FontFamily="{StaticResource PoppinsRegular}"
                                Click="BtnCustomSetup_Click"/>
                        
                        <Button x:Name="btnGenerateConfig" 
                                Content="Özel Config Oluştur" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Width="200"
                                        Margin="10,0,0,0"
                                        FontFamily="{StaticResource PoppinsRegular}"
                                        Click="BtnGenerateConfig_Click"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Button x:Name="btnExit" 
                                Content="Çıkış" 
                                FontFamily="{StaticResource PoppinsRegular}"
                                Width="80"
                                Click="BtnExit_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="Background" Value="#c25151"/>
                                    <Setter Property="BorderBrush" Value="#FF0000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#b83737"/>
                                            <Setter Property="BorderBrush" Value="#FF0000"/>
                                            <Setter Property="Foreground" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <TextBlock x:Name="txtWiresockStatus" 
                                   Text="WireSock durumu kontrol ediliyor..." 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Ana Sayfa Yardım Butonu -->
                    <Button x:Name="btnHelpMainPage" 
                            Grid.Row="2"
                            Content="?" 
                            Style="{StaticResource InfoButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,15,10"
                            Click="BtnHelpMainPage_Click"/>

                </Grid>
            </TabItem>
            
            <!-- ByeDPI Tab -->
            <TabItem Header="ByeDPI" FontFamily="{StaticResource PoppinsBold}">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- ByeDPI Buttons -->
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <Button x:Name="btnByeDPISetup" 
                                Content="ByeDPI Split Tunneling Kurulum" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Width="300"
                                Height="50"
                                FontSize="16"
                                FontFamily="{StaticResource PoppinsBold}"
                                Background="Transparent"
                                Margin="0,0,0,0"
                                Click="BtnByeDPISetup_Click"/>
                        
                        <!-- Tarayıcı Tünelleme Switch -->
                        <StackPanel x:Name="byedpiBrowserTunnelingPanel" 
                                    Orientation="Horizontal" 
                                    Margin="0,15,0,15" 
                                    HorizontalAlignment="Center">
                            <ToggleButton x:Name="chkByeDPIBrowserTunneling" 
                                         Style="{StaticResource ModernToggleSwitchStyle}"
                                         IsChecked="False"
                                         Checked="ChkByeDPIBrowserTunneling_Checked"
                                         Unchecked="ChkByeDPIBrowserTunneling_Unchecked"/>
                            <TextBlock Text="Tarayıcılar için de tünelleme yap" 
                                       FontFamily="{StaticResource PoppinsRegular}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Tarayıcı Tünelleme Durum Label -->
                        <TextBlock x:Name="lblByeDPIBrowserTunnelingStatus" 
                                   Grid.Row="0"
                                   FontFamily="{StaticResource PoppinsRegular}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="400"
                                   Margin="0,15,0,15"
                                   Visibility="Collapsed"/>
                        
                        <Button x:Name="btnByeDPIDLLSetup" 
                                Content="ByeDPI DLL Kurulum" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Width="300"
                                Height="50"
                                FontSize="16"
                                FontFamily="{StaticResource PoppinsBold}"
                                Background="Transparent"
                                Margin="0,0,0,10"
                                Click="BtnByeDPIDLLSetup_Click"/>
                        
                        <Button x:Name="btnRemoveByeDPI" 
                                Content="ByeDPI'ı Kaldır" 
                                Width="160"
                                Height="30"
                                Margin="0,20,0,0"
                                FontFamily="{StaticResource PoppinsRegular}"
                                Click="BtnRemoveByeDPI_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="Background" Value="#8B0000"/>
                                    <Setter Property="BorderBrush" Value="#FF0000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#b83737"/>
                                            <Setter Property="BorderBrush" Value="#FF0000"/>
                                            <Setter Property="Foreground" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    
                    <!-- ByeDPI Yardım Butonu -->
                    <Button x:Name="btnHelpByeDPI" 
                            Grid.Row="1"
                            Content="?" 
                            Style="{StaticResource InfoButtonStyle}"
